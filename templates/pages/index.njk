{% extends 'default.njk' %}

{% block content -%}

<div class="section no-space-top--  header-carousel">
    <div class="header-carousel__slider">
        {% for slide in data.info %}
            <div class="{%- if slide.customStyle -%}custom-style--{% endif %} header-carousel__slider-block" style="background-image:url({{path.images.pages}}index/{{slide.visual}})">
                <div class="wrapper">
                    <div class="header-carousel__slider-info">
                        <div class="header-carousel__slider-header  partial-underline-left white--">
                            {{ slide.title }} <span class="text-highlight">{{ slide.titleHighlight }}</span>
                        </div>

                        <div class="header-carousel__slider-desc">
                            {{ slide.textDesc }}
                        </div>

                        {%- if slide.sliderCtas -%}
                        <div class="header-carousel__slider-ctas">
                            <a class="button" href="{%- if language == 'my' -%}{{ path.language.my }}select-room.html {% else %} {{ path.language.en }}select-room.html {% endif %}">
                                {{ slide.sliderCtas.text }}
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="header-carousel__form">
        <div class="wrapper">
            <div class="header-carousel__form-container">
                <div class="header-carousel__form-primary">
                    <div class="form-layout flex-form--">
                        <div class="form-layout__block">
                            <div class="field hotel-choice with-icon--">
                                <div class="field__control">
                                    <span class="field__icon"><i class="fas fa-hotel"></i></i></span>

                                    <select class="field__select" required>
                                        <option value="" selected disabled hidden>Select your preferred hotel</option>
                                        <option value="Klana Beach Resort">Klana Beach Resort</option>
                                        <option value="AnCasa Residences">AnCasa Residences</option>
                                    </select>
                                </div>

                                <div class="field__ui"></div>
                            </div>
                        </div>

                        <div class="form-layout__block col-2--">
                            <div class="field with-icon--">
                                <div class="field__icon-container">
                                    <span class="field__icon"><i class="far fa-calendar-alt"></i></span>
                                    
                                    <input type="text" id="start-date" name="checkin" class="field__control" autocomplete="off" required placeholder="Check in">
                                </div>

                                <div class="field__ui"></div>
                            </div>
                        </div>

                        <div class="form-layout__block col-2--">
                            <div class="field with-icon--">
                                <div class="field__icon-container">
                                    <span class="field__icon"><i class="far fa-calendar-alt"></i></span>
                                    
                                    <input type="text" id="end-date" name="checkout" class="field__control" autocomplete="off" required placeholder="Check out">
                                </div>

                                <div class="field__ui"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="header-carousel__form-secondary">
                    <a class="header-carousel__form-ctas" href="{%- if language == 'my' -%}{{ path.language.my }}select-room.htm {% else %} {{ path.language.en }}select-room.html {% endif %}">
                        SEARCH ROOMS
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="wrapper">
        <div class="section__block">
            <div class="section-highlight">
                <div class="section-highlight__block">
                    <img src="{{path.images.pages}}index/bg-sec-1.png">
                </div>

                <div class="section-highlight__block">
                    <div class="section__block-heading partial-underline-left">
                        About <span class="text-highlight">Us</span>
                    </div>

                    <div class="section__block-desc">
                        It is our business to deliver quality accommodation for private quarantine in Malaysia. Through our holistic approach, we aim to provide them with a safe and comfortable stay, thoughtful amenities and services.
                    </div>

                    <div class="section-highlight__block-highlight">
                        <div class="section-highlight__block-highlight-col">
                            <span class="section-highlight__block-highlight-number">
                                3
                            </span>

                            <span class="section-highlight__block-highlight-text">
                                hotels nationwide
                            </span>
                        </div>

                        <div class="section-highlight__block-highlight-col">
                            <span class="section-highlight__block-highlight-number">
                                6000
                            </span>

                            <span class="section-highlight__block-highlight-text">
                                customers treated
                            </span>
                        </div>

                        <div class="section-highlight__block-highlight-col">
                            <span class="section-highlight__block-highlight-number">
                                200
                            </span>

                            <span class="section-highlight__block-highlight-text">
                                patients has been cured
                            </span>
                        </div>
                    </div>

                    <div class="section-highlight__block-ctas">
                        <a class="button-text with-icon-- space-right--" href="{%- if language == 'my' -%}{{ path.language.my }}about-us.html {% else %} {{ path.language.en }}about-us.html {% endif %}">
                            Read more

                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="wrapper">
        <div class="section__block">
            <div class="section-highlight type-2--">
                <div class="section-highlight__block">
                    <div class="section__block-heading partial-underline-left">
                        Our <span class="text-highlight">Hotels</span>
                    </div>

                    <div class="section__block-desc">
                        4 Star Hotel converted to become an accommodation center with all the facilities & Licence approved by JTKSM as per ACT446.
                    </div>

                    <div class="section-highlight__block-ctas">
                        <a class="button-text with-icon-- space-right--" href="{%- if language == 'my' -%}{{ path.language.my }}our-hotels.html {% else %} {{ path.language.en }}select-room.html {% endif %}">
                            Reserve your room

                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>

                <div class="section-highlight__block">
                    <div class="hotel-carousel">
                        {% for hotel in data.hotels %}
                            <div class="hotel-carousel__block">
                                <div class="hotel-carousel__wrapper">
                                    <div class="hotel-carousel__visual" style="background-image:url({{path.images.pages}}index/{{hotel.visual}})"></div>

                                    <div class="hotel-carousel__info">
                                        <i class="fas fa-map-marker-alt"></i>

                                        {{ hotel.name }}
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="section highlight-agencies">
    <div class="wrapper">
        <div class="section__block">
            <div class="section__block-heading ta-c partial-underline-middle">
                Our supported <span class="text-highlight">agencies</span>
            </div>
        </div>

        <div class="section__block">
            <div class="agency-carousel">
            {% for agency in data.agencies %}
                <div class="agency-carousel__block">
                    <div class="agency-carousel__wrapper">
                        <div class="agency-carousel__visual ta-c"> 
                            <img src="{{path.images.logos}}{{agency.visual}}">
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</div>

<div class="section highlight-agencies">
    <div class="wrapper">
        <div class="section__block">
            <div class="section__block-heading ta-c partial-underline-middle">
                Our satisfied <span class="text-highlight">customers</span>
            </div>
        </div>

        <div class="section__block">
            <div class="customer-carousel">
            {% for customer in data.customers %}
                <div class="customer-carousel__block">
                    <div class="customer-carousel__wrapper">
                        <div class="customer-carousel__title">
                            {{customer.title}}
                        </div>

                        <div class="customer-carousel__description">
                            {{customer.desc}}
                        </div>

                        <div class="customer-carousel__details">
                            <div class="customer-carousel__details-visual ta-c"> 
                                <img src="{{path.images.pages}}index/customer/{{customer.visual}}">
                            </div>

                            <div class="customer-carousel__details-name">
                                {{customer.name}}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
</div>

{%- endblock %}